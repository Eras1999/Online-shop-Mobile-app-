<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background color (if needed) -->
            <solid android:color="#FFFFFF"/> <!-- Change to desired background color -->
        </shape>
    </item>
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- Border color -->
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="10dp"
                android:color="@android:color/black"/> <!-- Change to desired border color -->
        </shape>
    </item>
</layer-list>
